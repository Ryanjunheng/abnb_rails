<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" id="brand" href="/">ABnB</a>
    </div>
      
    <ul class="nav navbar-nav navbar-right">
      <% if !signed_in? %>
        <li><a class="modal-btn" data-toggle="modal" data-target="#signupModal" ><span class="glyphicon glyphicon-user"></span> Sign-up</a>
        <li><a class="modal-btn" data-toggle="modal" data-target="#loginModal" ><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
      <% else %>
        <li id="sign-in-as">Signed in as: <%= current_user.name %></li>
        <li><%= link_to raw('<i class="fa fa-user-circle"></i> Profile'), user_path(current_user.id)  %></li>
        <li><%= link_to raw('<i class="fa fa-building-o"></i> Become a host'), new_user_listing_path(current_user.id) %></li>
        <li><%= link_to raw('<i class="fa fa-sign-out"></i> Sign Out'), sign_out_path, method: :delete %></li>
      <% end %>
    </ul>
  </div>
</nav>

<div id="loginModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title text-center">Log In to your account</h4>
      </div>
      <div class="modal-body">
        <div id="clearance" class="sign-in">

          <%= render partial: '/sessions/form' %>

        </div>

        <h4>OR</h4>
  
        <% if !signed_in? %>
          <%= link_to "Sign in with Facebook", "/auth/facebook" %>
        <% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

<div id="signupModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title text-center">Sign Up an account!</h4>
      </div>
      <div class="modal-body">
        <div id="clearance" class="sign-up">

          <%= form_for User.new do |form| %>
            <%= render partial: '/users/form', object: form %>

            <div class="submit-field">
              <%= form.submit %>
            </div>

          <% end %>
        </div>
        <h4>OR</h4>
        <% if !signed_in? %>
          <%= link_to "Sign in with Facebook", "/auth/facebook" %>
        <% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>